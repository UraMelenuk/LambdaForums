@model LambdaForums.Models.ReplyL.EditPostReplyModel

<div class="container body-content">

    <div class="row sectionHeader">
        <div class="sectionHeading">
            Edit Reply
        </div>
        <a asp-controller="Post" asp-action="Index" asp-route-id="@Model.Post.Id" class="btn btn-back" style="float:right; margin-right:12px;"> Back to Reply </a>
    </div>


    <div class="row">
        <div id="createForumSection">
            <form asp-controller="Reply" asp-action="Edit" asp-route-id="@Model.Id" method="post" id="createForumForm" enctype="multipart/form-data">
                <br />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Message"></label>
                    <textarea asp-for="Message" class="form-control" rows="20"></textarea>
                </div>

                <br />
                <button type="submit" id="newForumBtn" class="btn btn-submitPost"> Edit Reply </button>
            </form>
        </div>
    </div>

</div>
<!-- Валідація -->
@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}